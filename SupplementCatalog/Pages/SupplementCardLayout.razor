@inherits SupplementCatalog.web.Pages.Base.SupplementCardLayoutBase


<div >
    <div class="card-deck">
        @if (Supplements != null)
        {
            @foreach (var supplement in Supplements)
            {
                @* Turn this into its own component*@
                <div class="card m-3" style="min-width: 18rem; max-width:30.5%">
                    <div class="card-header">
                        @supplement.Name
                    </div>
                    <img class="card-img-top supplement-image" src="@supplement.ImagePath" />
                    <div class="card-footer text-center">
                        <a href="#" class="btn btn-primary m-1">View</a>
                        <a href="#" class="btn btn-primary m-1">Edit</a>
                        <a href="#" class="btn btn-danger m-1">Delete</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="spinner"></div>
        }

    </div>
</div>